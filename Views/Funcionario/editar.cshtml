@model desafio_mvc.DTO.FuncionarioDTO;

@{
    Layout = "_LeftMenu";
    var tecnologias = new SelectList(ViewBag.Tecnologia, "Id", "Nome");
    var unidadesGft = new SelectList(ViewBag.Unidades, "Id", "Nome", "Cidade");
}

<link rel="stylesheet" href="~/css/vagas.css" />

<script>
    $(document).ready(function () {
        $('#dropTechFE').dropdown();
        $('#dropLocations').dropdown();

    });

</script>

<link rel="stylesheet" href="~/css/funcionario.css" />

<script src="~/js/customDay.js"></script>

