@model desafio_mvc.DTO.TecnologiaDTO;

@{
    Layout = "_LeftMenu";
}

<link rel="stylesheet" href="~/css/vagas.css" />
<link rel="stylesheet" href="~/css/sideMenu.css" />
<link rel="stylesheet" href="~/css/tech.css" />

<script src="~/js/tech.js"></script>


<header>
    <h2>Tecnologias</h2>
    <h3>Cadastrar nova tecnologia</h3>
</header>


<div id="modal">

    <form id="formtech">
         
        <div class="Techname">
            <label asp-for="Nome">Informe o nome da tecnologia</label>
            <input  type="text" asp-for="Nome" required>
            <span asp-validation-for="Nome"></span><br />
        </div> 

        <button id="btnTechSalvar" type="submit">Salvar</button>
    </form>
    <span id="error"></span>


</div>